
#include <stdio.h>
#include <stdlib.h>
#define MAXNM 10000
#define INF 1000000000

int n, m;
int a[100][100];
int pi[MAXNM], parent[MAXNM], mark[MAXNM];

int dr[] = {-1,1,0,0}, dc[] = {0,0,-1,1};

int inside(int r, int c) {
    return r>=0 && r<n && c>=0 && c<m;
}

void Dijkstra(int s) {
    int N = n*m;
    for(int i=0;i<N;i++){
        pi[i] = INF;
        mark[i] = 0;
        parent[i] = -1;
    }
    pi[s] = 0;// chi phi bat dau bang gia tri o 0,0
    for(int it=0;it<N;it++){
        int u=-1, mn=INF;
        for(int i=0;i<N;i++) if(!mark[i] && pi[i]<mn){
            mn = pi[i]; u=i;
        }
        if(u<0) break;
        mark[u] = 1;
        int ur = u / m, uc = u % m;
        for(int k=0;k<4;k++){
            int vr = ur + dr[k], vc = uc + dc[k];
            if(!inside(vr,vc)) continue;
            int v = vr*m + vc;
            int w = a[vr][vc];
            if(!mark[v] && pi[u] + w < pi[v]){
                pi[v] = pi[u] + w;
                parent[v] = u;
            }
        }
    }
}

int main(){
    scanf("%d%d", &n, &m);
    for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            scanf("%d", &a[i][j]);
        }
    }

    Dijkstra(0);
    int t = (n-1)*m + (m-1);
    printf("%d\n", pi[t]);

    return 0;
}
